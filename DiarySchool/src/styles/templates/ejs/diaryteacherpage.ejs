<%- include('out/header.ejs') %>
<link rel="stylesheet" href="/src/styles/css/diaryteacherpage.css">
<title>Teacher page</title>

<header class="header">
    <div class="header__content">
        <h1><a href="/diary/main">DiaryPage</a></h1>
        <h1><%= login %>, Teacher</h1>
    </div>
</header>
<section class="card">
    <div class="card__content">
        <ul>
            <% users.forEach((user) => { %>
                <% if (user.post === 'school') {%>
                    <li>Name: <span><%= user.login %></span></li>
                    <li>Post: <span><%= user.post %></span></li>
                    <li>Maths: <span><%= user.math %></span></li>
                    <li>Rus: <span><%= user.rus %></span></li>
                    <form action="/diary/main/teacher/markplace/<%= user.id %>" method="post">
                        <button type="submit">Set Mark</button>
                        <select name="markplace" id="markplace">
                            <option value="5">5</option>
                            <option value="4">4</option>
                            <option value="3">3</option>
                            <option value="2">2</option>
                        </select>
                        <select name="object" id="object">
                            <option value="" selected disabled>Subject</option>
                            <option value="math">Math</option>
                            <option value="rus">Russian</option>
                        </select>
                    </form>
                <% } %>
            <%})%>
        </ul>

    </div>
</section>

<%- include('out/footer.ejs') %>